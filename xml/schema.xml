<schema version="0.2">
    <!--
    TABLE badpw_failedlogins
    -->
    <table name="badpw_failedlogins">
        <field name="username" type="C2" size="32" >
            <KEY/>
        </field>
        <field name="count" type="I8">
            <NOTNULL/>
        </field>
        <field name="failed_login_time" type="T" >
            <NOTNULL/>
        </field>
        <descr>badpw failed login attempts</descr>
    </table>
    
</schema>
